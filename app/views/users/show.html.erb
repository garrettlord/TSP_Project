<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @user.phone_number %></dd>

</dl>

  

  <dl class="dl-horizontal">
    <dt><strong>Groups this user is in:</strong></dt>
    <% @user.all_groups.each do |group|%>
      <dd><%=link_to group.name, group_path(group) %></dd>
    <% end %>
  </dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_path(@user), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_path(@user),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<center>
<div class="row">
  <div class = "span6">
    <h2>Send a Message</h2>
  </div>
  <div class = "span6">
    <h2>Associate Groups and Users</h2>
  </div>
</div>
<div class="row">


<%= form_tag "/group_messages" do %>
      <div class = "span3">
        <p><Strong>Groups:</Strong></p>
        <%= select_tag :group, options_from_collection_for_select(@groups, "id", "name"), size: "10" %>
        
      </div>
      <div class = "span3">
        <p><Strong>Message:</Strong></p>
        <%= text_area_tag :message, nil, rows: "9" %>
        <%= hidden_field_tag :user_id, "#{@user.id}" %>
        <%= submit_tag nil, value: "Send", class: "btn btn-large btn-primary" %>  
      </div>

<% end %>



  <div class="span3">
    
    <p><Strong>Groups:</Strong></p>
    <select multiple="multiple" size = "10">
        <% @groups.each do |group|%>
          <option><%= group.name%></option>
        <%end%>
      </select>
      <p><small>Hold Ctrl to select multiple items</small></p>
  </div>
  
  <div class="span3">
    <p><Strong>Users:</Strong></p>
    <select multiple="multiple" size = "10">
        <% @users.each do |user|%>
          <option><%= user.name%></option>
        <%end%>
      </select>
      <button class="btn btn-large btn-primary" type="button">Associate</button>
  </div>
</div>
</center>
