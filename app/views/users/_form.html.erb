<%= form_tag '/users', :html => { :class => 'form-horizontal' } do %>
  <div class="control-group">
    <%= label_tag :name, nil, :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :name, nil, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :phone_number, nil, :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :phone_number, nil, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, nil, :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, nil, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password_confirmation, nil, :class => 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password_confirmation, nil, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
