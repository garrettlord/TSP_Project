<%= form_for(@text_message) do |f| %>

    <div class="field">
      <fieldset class="text-fieldset">
        <%= f.label :numbers, "Numbers", :class => "text-label" %>
        <%= f.text_field :numbers, :class => "text-textfield"%>
        <p class="instruct">The numbers to send an SMS to.  This field accepts a comma separated list of ten digit phone numbers, e.g. 4155551212, (415) 555-1212, 415-555-1212.</p>
      </fieldset>
    </div>

    <div class="field">
      <fieldset class="text-fieldset">
        <%= f.label :message, "Message", :class => "text-label" %>
        <%= f.text_area :message, :class => "text-textarea"%>
        <p class="instruct">The text of the message you want to send, limited to 160 characters.</p>
      </fieldset>
    </div>

    <div class="actions">
      <%= f.submit "Send", :class => "button" %>
    </div>

    <% if @text_message.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@text_message.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% @text_message.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

<% end %>
