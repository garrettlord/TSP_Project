<%= form_tag "/group_users", :html => { :class => 'form-horizontal' } do %>
  <div class="control-group">
    <%= label_tag :group_name,nil, :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :group_name, nil, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :user_name,nil, :class => 'control-label' %>
    <div class="controls">
      <%= text_field_tag :user_name, nil, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                group_users_path, :class => 'btn' %>
  </div>
<% end %>
