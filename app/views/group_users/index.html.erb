<%- model_class = GroupUser -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:group_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @group_users.each do |group_user| %>
      <tr>
        <td><%= link_to Group.find(group_user.group_id).name, group_path(Group.find(group_user.group_id))%></td>
        <td><%= link_to User.find(group_user.user_id).name,  user_path(User.find(group_user.user_id))%></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      group_user_path(group_user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_group_user_path,
            :class => 'btn btn-primary' %>
