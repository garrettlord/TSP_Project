<% provide(:title, 'Associations') %>
<h1>Listing Associations</h1>

<table>
  <tr>
    <th>Group Name</th>
    <th>User Name</th>
    <th></th>
    <th></th>
  </tr>

<% @group_users.each do |group_user| %>
  <tr>
    <td><%= Group.find(group_user.group_id).name %></td>
    <td><%= User.find(group_user.user_id).name %></td>
    <td><%= link_to 'Show', group_user_path(group_user) %></td>
    <td><%= link_to 'Destroy', group_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Association', new_group_user_path %>
